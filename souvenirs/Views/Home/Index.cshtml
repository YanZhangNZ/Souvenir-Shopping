@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style="border-radius:50%;">
        <div class="item active">
            <img src="~/images/souvenir7.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
        <div class="item">
            <img src="~/images/souvenir3.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel2.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        <div class="item">
            <img src="~/images/souvenir8.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />


<section class="container-fluid row">
    <div class="col-xs-12 col-s-12 col-md-4 col-lg-4 col-xl-4" style="border:1px solid lightgrey">
        <div class="card" style="width: 400px;height:480px;">
            <h3 class="text-center">our products</h3>
            <img style="width:350px;border-radius:50%;"class="card-img-top" src="~/images/souvenir6.jpg" alt="Card image cap">
            <br />
            <div class="card-body text-align" style="margin:30px">
                <a asp-area="" asp-controller="MemberSouvenir" asp-action="Index" class="btn btn-success" style="width:100px;margin-left:80px;">View More</a>
            </div>
        </div>
        
    </div> 

    <div class="col-xs-12 col-s-12 col-md-4 col-lg-4 col-xl-4" style="border:1px solid lightgrey">
        <div class="card" style="width: 400px;height:480px;">
            <h3 class="text-center">feel free to contact</h3>
            <img style="width:350px;border-radius:50%;" class="card-img-top" src="~/images/carousel1.jpg" alt="Card image cap">
            <br />
            <div class="card-body text-align" style="margin:30px">
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-success" style="width:100px;margin-left:80px;">get in touch</a>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-s-12 col-md-4 col-lg-4 col-xl-4" style="border:1px solid lightgrey">
        <div class="card" style="width: 400px;height:480px;">
            <h3 class="text-center">Know more about us</h3>
            <img style="width:350px;border-radius:50%;margin-top:40px;" class="card-img-top" src="~/images/gift4.jpg" alt="Card image cap">
            <br />
            <div class="card-body text-align" style="margin:30px">
                <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-success" style="width:100px;margin-left:80px;">About Us</a>
            </div>
        </div>
    </div>
</section>
